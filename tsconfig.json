{
  "compilerOptions": {
    "target": "ES6",
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "./src",
    "downlevelIteration": true,
    "outDir": "./public/"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
